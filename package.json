{
  "name": "humans",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.15.4",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "test:coverage": "turbo test -- --coverage",
    "format": "prettier --write .",
    "db:generate": "pnpm --filter @humans/db generate",
    "db:migrate": "pnpm --filter @humans/db migrate",
    "db:seed": "pnpm --filter @humans/db seed"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@playwright/test": "^1.58.2",
    "@vitest/eslint-plugin": "^1.1.0",
    "eslint": "^9.18.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-svelte": "^3.15.0",
    "globals": "^17.3.0",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "turbo": "^2.3.3",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0",
    "wrangler": "4"
  }
}
